    "shelljs": "^0.8.5",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/cz-commitlint": "^16.2.1",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^17.0.21",
    "@types/shelljs": "^0.8.11",
