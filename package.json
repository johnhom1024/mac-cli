{
  "name": "mac-cli",
  "version": "1.0.0",
  "main": "index.js",
  "author": "anthony <924358746@qq.com>",
  "license": "MIT",
  "scripts": {
    "commit": "npx cz",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --respawn -traspile-only src/index.ts",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/cz-commitlint": "^16.2.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.10.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
